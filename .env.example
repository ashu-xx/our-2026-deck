# Local vs Prod mode
# - true: localStorage + local mock accounts
# - false: remote API (/api/*) + Vercel KV/Blob
VITE_LOCAL_DEV_MODE=true

# Local mock login (local dev only)
# Format: comma-separated users email:password
VITE_LOCAL_USERS=alice@example.com:alice123,bob@example.com:bob123

# Server-side Basic Auth for API routes (set in Vercel Project Env Vars)
# NOTE: These are NOT VITE_ vars because they must NOT be exposed to the browser.
APP_LOGIN_EMAIL=your-email@example.com
APP_LOGIN_PASSWORD=your-strong-password
